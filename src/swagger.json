{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX Documentation",
    "description": "This is an API Rente",
    "version": "1.0.0",
    "contact": "igorbarbosaemerick@gmail.com"
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "Category"
        ],
        "sumary": "Create category",
        "description": "Create a new non exists category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Category"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/CategoryResponse"
                }
              }
            }
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": [
          "Category"
        ],
        "sumary": "List categories",
        "description": "List all categories",
        "responses": {
          "200": {
            "description": "Returns a array with all categories",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/CategoriesResponse"
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": [
          "Category"
        ],
        "sumary": "Create categories",
        "description": "Upload a file.csv for create new non exists categories",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/definitions/CategoriesImport"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/CategoriesResponse"
                }
              }
            }
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": [
          "Specification"
        ],
        "sumary": "Create a specification",
        "description": "Create a new non exists specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specification"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SpecificationResponse"
                }
              }
            }
          },
          "500": {
            "description": "Specification already exists"
          }
        }
      },
      "get": {
        "tags": [
          "Specification"
        ],
        "sumary": "List specifications",
        "description": "List all specifications",
        "responses": {
          "200": {
            "description": "Returns a array with all specifications",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SpecificationsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": [
          "User"
        ],
        "sumary": "Create user",
        "description": "Create a new non exists user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/UserResponse"
                }
              }
            }
          },
          "500": {
            "description": "User already exists"
          }
        }
      }
    }
  },
  "definitions": {
    "Category": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of category who will be created"
        },
        "description": {
          "type": "string",
          "description": "Description of category who will be created"
        }
      }
    },
    "CategoryResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "UUID of category"
        },
        "name": {
          "type": "string",
          "description": "Name of category"
        },
        "description": {
          "type": "string",
          "description": "Description of category"
        },
        "created_at": {
          "type": "string",
          "description": "Creation's date of category"
        }
      }
    },
    "CategoriesResponse": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CategoryResponse"
      }
    },
    "CategoriesImport": {
      "type": "object",
      "properties": {
        "file": {
          "type": "string",
          "format": "binary"
        }
      },
      "example": {
        "file": "File.csv"
      }
    },
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of specification who will be created"
        },
        "description": {
          "type": "string",
          "description": "Description of specification who will be created"
        }
      }
    },
    "SpecificationResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "UUID of specification"
        },
        "name": {
          "type": "string",
          "description": "Name of specification"
        },
        "description": {
          "type": "string",
          "description": "Description of specification"
        },
        "created_at": {
          "type": "string",
          "description": "Creation's date of specification"
        }
      }
    },
    "SpecificationsResponse": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/SpecificationResponse"
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "driver_license": {
          "type": "string"
        }
      }
    },
    "UserResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "driver_license": {
          "type": "string"
        },
        "created_at": {
          "type": "string"
        }
      }
    }
  }
}